#!/bin/sh

# aliases
alias s="sudo"
alias v="vim"
alias c="clear"
alias ls="ls -a --color"
alias g="git"
alias gc="git clone"
alias gcm="git commit -m"
alias ga="git add"
alias gs="git status"
alias gpl="git pull"
alias gph="git push"
alias ka="killall"
alias z="zathura"
alias rf="rm -rf"
alias clean="sudo emerge --depclean"
alias newuse="sudo emerge --update --newuse --deep @world"
alias av="sudo emerge -av"
alias udu="sudo emerge -uDU --keep-going --with-bdeps=y @world"
alias up="emerge -upvDN --with-bdeps=y @world"
alias remove="sudo emerge --deselect"
alias pv="emerge -pv"
alias sync="sudo emaint sync -a"
alias search="emerge --search"
alias installed="cat /var/lib/portage/world"
alias xrdb="xrdb -load ~/.config/X11/xresources"
alias put="trash-put"
alias config='/usr/bin/git --git-dir=$HOME/Projects/dotfiles/ --work-tree=$HOME'
